<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="4"
    tools:context=".MainActivity">

    <TextView
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="#305C1D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="Dong 0 cot 0" />
    <TextView
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="#B38882"
        android:layout_row="0"
        android:layout_column="1"
        android:text="Dong 0 cot 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="#29B6F6"
        android:layout_row="0"
        android:layout_column="2"
        android:text="Dong 0 cot 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="#f20"
        android:layout_gravity="center"
        android:layout_columnSpan="2"
        android:layout_row="1"
        android:layout_column="0"
        android:text="Dong 1 cot 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_rowSpan="2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="#f20"
        android:layout_row="1"
        android:layout_column="2"
        android:text="Dong 1 2 cot 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="#f20"
        android:layout_row="3"
        android:layout_column="0"
        android:text="Dong 3 cot 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</GridLayout>